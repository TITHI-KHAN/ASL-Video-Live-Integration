{
    "manifest_version": 3,
    "name": "Automatic Text Simplification Prototype",
    "version": "1.1",
    "description": "Provides customizable automatic text simplification",
    "short_name": "ATS Prototype",
    "permissions": [
      "activeTab", 
      "declarativeContent", 
      "storage", 
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>",
      "http://127.0.0.1:8000/decomplexify/", 
      "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["thirdParty/jquery-3.6.0.min.js", "content.js"],
        "css": ["styles.css"],
        "all_frames": true,
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_title": "UI",
      "default_popup": "popup.html",
      "default_icon": {
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
   }
